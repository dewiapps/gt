
<!DOCTYPE html>
<html>
  <body>
    <% include partials/head %>
    <% include partials/nav %>
    <div class="container">
  
      <!-- ----- START LOGIN MARKUP ------ -->  

      <div class="login text-center">   
      <h2>Log In</h2>
      <form method="post" action="/login">
        <div class="form-group">
          <input type="text" name="username" placeholder="username" ></input><br>
          <input type="password" name="password" type="password" placeholder="password" ></input><br>
          <input class="btn btn-success" type="submit" value="Log In">
        </div>
      </form>
      <p id="logInErrorMsg"><%= loginMessage %></p>
    
      <h2>Sign Up</h2>
      <form method="post" action="/signup">
        <div class="form-group">
          <input type="text" name="username" placeholder="username"></input><br>
          <input type="email" name="email" type="email" placeholder="email"></input><br>
          <input type="password" name="password" type="password" placeholder="password"></input><br>
          <input class="btn btn-success" type="submit" value="Sign Up">
        </div>
      </form>
      <p id="signUpErrorMsg"><%= signupMessage %></p>
      </div>  
  
 <!-- ----- END LOGIN MARKUP ------ --> 
      
      
      
    </div><!-- end container -->
  <% include partials/footer %>
  </body>
</html>